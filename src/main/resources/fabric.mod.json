{
  "schemaVersion": 1,
  "id": "clickmachine",
  "version": "${version}",
  "name": "Kenza's Click Machine",
  "description": "Adds one block to the game: Auto Clicker. This autoclicker can be placed in the world and used to simulate left or right mouse clicks.",
  "authors": [
    "DmitryKenza"
  ],
  "contact": {
    "homepage": "https://github.com/dmkenza/ClickMachine_Fabric",
    "sources": "https://github.com/dmkenza/ClickMachine_Fabric"
  },

  "license": "CC0-1.0",
  "icon": "assets/clickmachine/logo.png",

  "environment": "*",
  "entrypoints": {
    "main": [
      "com.kenza.clickmachine.ClickMachine"
    ],

    "client": [ "com.kenza.clickmachine.ClickMachineClient" ],
    "modmenu": []
  },
  "mixins": [
    "clickmachine.mixins.json"
  ],
  "depends": {
    "fabricloader": ">=0.12.0",
    "java": ">=16",
    "fabric-api-base": ">=0.1.0",
    "fabric-events-lifecycle-v0": ">=0.1.0",
    "fabric-keybindings-v0": ">=0.1.0",
    "fabric-rendering-v1": ">=0.1.0"
  },
  "suggests": {
    "modmenu": "*"
  }

}
